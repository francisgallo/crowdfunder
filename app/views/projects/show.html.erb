
<h1> <%= @project.title %> </h1>

  <p> $ <%= @project.goal%> </p>
  <p> <%= @project.start_date %> </p>
  <p><%= @project.description %></p>


<h2>Choose your reward for <%= @project.title %></h2>

   <% @project.rewards.each do |reward| %>
     <p>
       <%= reward.amount %>
     <br>
       <%= reward.description %>
     </p>
   <% end %>

  <% if current_user %>

    <%= form_for [@project, @pledge] do |f| %>

      <%= f.radio_button(:amount, 25) %>
      <%= f.label(:amount, '25') %>
      <%=f.hidden_field :user_id, :value => current_user.id%>

      <%= f.radio_button(:amount, 50) %>
      <%= f.label(:amount, '50') %>
      <%=f.hidden_field :user_id, :value => current_user.id%>

      <%= f.radio_button(:amount, 75) %>
      <%= f.label(:amount, '75') %>
      <%=f.hidden_field :user_id, :value => current_user.id%>

      <%= f.radio_button(:amount, 100) %>
      <%= f.label(:amount, '100') %>
      <%=f.hidden_field :user_id, :value => current_user.id%>

      <%= f.submit %>

    <% end %>

  <% end %>
